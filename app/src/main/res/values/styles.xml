<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name = "NoActionBar" parent = "@android:style/Theme.Holo.Light">
        <item name = "android:windowActionBar">false</item>
        <item name = "android:windowNoTitle">true</item>
    </style>
    <style name="ToolbarTheme" parent="AppTheme">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>
    <style name="NavigationViewTheme" parent="AppTheme">
        <item name="textAppearanceListItem">@style/TextAppearance.AppCompat.Body2</item>
    </style>
    <style name="EditTextView1">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@drawable/edittext_style</item>
        <item name="android:color" >#fff</item>
        <item name="android:bottom">1dp</item>
        <item name="android:top">1dp</item>
        <item name="android:textSize">11dp</item>
        <item name="android:paddingLeft">3dp</item>
        <item name="android:textColor">#336699</item>
    </style>

    <style name="EditViewList">
        <item name="android:textColor">#333</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="TextBox1">
        <item name="android:background">#fff</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:paddingLeft">5dp</item>
    </style>

    <style name="lblView">
        <item name="android:textColor">#336699</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="lblThongTin">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#2a2a2a</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:textSize">15dp</item>
    </style>
</resources>