<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp">

    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:elevation="20dp"
        app:cardBackgroundColor="#ffffff"
        app:cardCornerRadius="8dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="20dp"
            >
            <TextView
                android:text="Quy Hoạch:"
                android:layout_width="90dp"
                style="@style/lblBodyBold"

                android:singleLine="true" />
            <TextView
                android:text="***"
                android:layout_width="240dp"
                style="@style/lblBodyRerular"
                android:id="@+id/txtQuyHoachItem"
                android:singleLine="true" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="50dp"
            >
            <TextView
                android:text="Diện Tích QH:"
                android:layout_width="130dp"
                style="@style/lblBodyBold"
                android:singleLine="true" />
            <TextView
                android:text="***"
                android:layout_width="200dp"
                style="@style/lblBodyRerular"
                android:id="@+id/txtdientich"
                android:singleLine="true" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="80dp"
            >
            <TextView
                android:text="Diện Tích Giao:"
                android:layout_width="140dp"
                style="@style/lblBodyBold"
                android:singleLine="true" />
            <TextView
                android:text="***"
                android:layout_width="190dp"
                style="@style/lblBodyRerular"
                android:id="@+id/txtdientichGiao"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="170dp"
            >
            <TextView
                android:text="Tằng Cao XD:"
                android:layout_width="110dp"
                style="@style/lblBodyBold"
                android:singleLine="true" />
            <TextView
                android:text="***"
                android:layout_width="50dp"
                style="@style/lblBodyRerular"
                android:id="@+id/txtTangXayDung"
                android:singleLine="true" />

            <TextView
                android:text="Mục Đích SD:"
                android:layout_width="100dp"
                style="@style/lblBodyBold"
                android:singleLine="true" />
            <TextView
                android:text="***"
                android:layout_width="70dp"
                style="@style/lblBodyRerular"
                android:id="@+id/txtMDSD"
                android:singleLine="true" />



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="110dp"
            >
            <TextView
                android:text="Ô Phố:"
                android:layout_width="80dp"
                style="@style/lblBodyBold"

                android:singleLine="true" />
            <TextView
                android:text="***"
                android:layout_width="80dp"
                style="@style/lblBodyRerular"
                android:id="@+id/txtO"
                android:singleLine="true" />
            <TextView
                android:text="Lô Đất Chức Năng:"
                android:layout_width="130dp"
                style="@style/lblBodyBold"
                android:singleLine="true" />
            <TextView
                android:text="***"
                android:layout_width="40dp"
                style="@style/lblBodyRerular"
                android:id="@+id/txtLo"
                android:singleLine="true" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="140dp"
            >
            <TextView
                android:text="Mật Độ XD:"
                android:layout_width="80dp"
                style="@style/lblBodyBold"
                android:singleLine="true" />
            <TextView
                android:text="***"
                android:layout_width="80dp"
                style="@style/lblBodyRerular"
                android:id="@+id/txtMatDoXayDung"

                android:singleLine="true" />

            <TextView
                android:text="Dân Số (người):"
                android:layout_width="110dp"
                style="@style/lblBodyBold"
                android:singleLine="true" />
            <TextView
                android:text="***"
                android:layout_width="60dp"
                style="@style/lblBodyRerular"
                android:id="@+id/txtDanSo"
                android:singleLine="true" />
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="140dp"
            >

        </LinearLayout>


    </androidx.cardview.widget.CardView>
</LinearLayout>