            <LinearLayout
                android:layout_width="wrap_content"

                android:layout_height="wrap_content">
                <TextView
                    android:text="Dân Số (người):"
                    android:layout_width="wrap_content"
                    style="@style/lblBodyBold"
                    android:singleLine="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="***"
                    android:layout_width="60dp"
                    android:layout_marginLeft="5dp"

                    style="@style/lblBodyRerular"
                    android:id="@+id/txtDanSo"
                    android:singleLine="true" />
            </LinearLayout>





        </LinearLayout>



    </androidx.cardview.widget.CardView>
