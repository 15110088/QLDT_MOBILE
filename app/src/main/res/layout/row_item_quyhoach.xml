                android:layout_height="wrap_content">
                <TextView
                    android:text="***"
                    android:layout_width="70dp"
                    style="@style/lblBodyRerular"
                    android:id="@+id/txtMDSD"
                    android:singleLine="true" />
            </LinearLayout>

        </LinearLayout>
