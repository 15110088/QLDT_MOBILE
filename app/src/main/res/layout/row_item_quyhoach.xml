<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp">

    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:elevation="20dp"
        app:cardBackgroundColor="#ffffff"
        app:cardCornerRadius="8dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                                android:text="Quy Hoạch:"
                                android:layout_width="wrap_content"
                                style="@style/lblBodyBold"
                                android:singleLine="true" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                            <TextView
                                android:text="***"
                                android:layout_width="fill_parent"
                                style="@style/lblBodyRerular"
                                android:id="@+id/txtQuyHoachItem"
                                android:singleLine="true" />
            </LinearLayout>




        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="20dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Diện Tích QH:"
                    android:layout_width="wrap_content"
                    style="@style/lblBodyBold"
                    android:singleLine="true" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="***"
                    android:layout_width="200dp"
                    style="@style/lblBodyRerular"
                    android:id="@+id/txtdientich"
                    android:singleLine="true" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="80dp"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Diện Tích Giao:"
                    android:layout_width="wrap_content"
                    style="@style/lblBodyBold"
                    android:singleLine="true" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="***"
                    android:layout_width="wrap_content"
                    style="@style/lblBodyRerular"
                    android:id="@+id/txtdientichGiao"
                    android:singleLine="true" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="170dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Tằng Cao XD:"
                    android:layout_width="wrap_content"
                    style="@style/lblBodyBold"
                    android:singleLine="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="****"
                    android:layout_width="40dp"
                    style="@style/lblBodyRerular"
                    android:id="@+id/txtTangXayDung"
                    android:singleLine="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Mục Đích SD:"

                    android:layout_width="100dp"
                    style="@style/lblBodyBold"
                    android:singleLine="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="***"
                    android:layout_width="70dp"
                    style="@style/lblBodyRerular"
                    android:id="@+id/txtMDSD"
                    android:singleLine="true" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="110dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                    <TextView
                        android:text="Ô Phố:"
                        android:layout_width="wrap_content"
                        style="@style/lblBodyBold"

                        android:singleLine="true" />


                    <TextView
                        android:text="****"
                        android:layout_width="70dp"
                        style="@style/lblBodyRerular"
                        android:id="@+id/txtO"
                        android:singleLine="true" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Lô Đất Chức Năng:"
                    android:layout_width="wrap_content"
                    style="@style/lblBodyBold"
                    android:singleLine="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="***"
                    android:layout_width="40dp"
                    style="@style/lblBodyRerular"
                    android:id="@+id/txtLo"
                    android:singleLine="true" />
            </LinearLayout>






        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="140dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Mật Độ XD:"
                    android:layout_width="wrap_content"
                    style="@style/lblBodyBold"
                    android:singleLine="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="******"
                    android:layout_width="50dp"
                    style="@style/lblBodyRerular"
                    android:id="@+id/txtMatDoXayDung"

                    android:singleLine="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginStart="10dp"

                android:layout_height="wrap_content">
                <TextView
                    android:text="Dân Số (người):"
                    android:layout_width="wrap_content"
                    style="@style/lblBodyBold"
                    android:singleLine="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="***"
                    android:layout_width="60dp"
                    android:layout_marginLeft="5dp"

                    style="@style/lblBodyRerular"
                    android:id="@+id/txtDanSo"
                    android:singleLine="true" />
            </LinearLayout>








        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="140dp"
            >

        </LinearLayout>


    </androidx.cardview.widget.CardView>
</LinearLayout>